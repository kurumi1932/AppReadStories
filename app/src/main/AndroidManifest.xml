<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="huce.fit.appreadstories">
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/AppReadStories">
        <activity
            android:name=".controller.activity.AccountLoginActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".controller.activity.MainActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".controller.activity.StorySearchActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".controller.activity.StoryInterfaceActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".controller.activity.ChapterListActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".controller.activity.ChapterReadActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".controller.activity.AccountCreateActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".controller.activity.AccountUpdateActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".controller.activity.CommentListActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".controller.activity.ContactInforActivity"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>