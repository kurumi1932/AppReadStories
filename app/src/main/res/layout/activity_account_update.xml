<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/account_update_title_height"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="@dimen/account_update_title_margin_horizontal"
            android:layout_height="match_parent"
            android:background="?android:attr/selectableItemBackground"
            android:padding="10dp"
            android:src="@drawable/ic_back"
            app:tint="@color/black"
            tools:ignore="contentDescription" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/account_update_title_margin_horizontal"
            android:gravity="center"
            android:text="@string/account_information"
            android:textColor="@color/black"
            android:textSize="@dimen/account_update_title_size" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/silver"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivIconApp"
        android:layout_width="@dimen/account_update_image_size"
        android:layout_height="@dimen/account_update_image_size"
        android:layout_marginTop="40dp"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginVertical="40dp"
        android:layout_marginHorizontal="50dp">

        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="@dimen/account_update_edit_text_height"
            android:drawableStart="@drawable/ic_display_name"
            android:drawablePadding="5dp"
            android:drawableTint="@color/black"
            android:hint="@string/hint0"
            android:importantForAutofill="no"
            android:inputType="text"
            android:textColor="@color/black"
            android:textColorHint="@color/silver"
            android:textSize="@dimen/account_update_text_size" />

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/account_update_edit_text_height"
            android:layout_marginTop="@dimen/account_update_edit_text_margin_top"
            android:drawableStart="@drawable/ic_email"
            android:drawablePadding="5dp"
            android:drawableTint="@color/black"
            android:hint="@string/hint1"
            android:importantForAutofill="no"
            android:inputType="textEmailAddress"
            android:textColor="@color/black"
            android:textColorHint="@color/silver"
            android:textSize="@dimen/account_update_text_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/account_update_edit_text_margin_top"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etBirthday"
                android:layout_width="match_parent"
                android:layout_height="@dimen/account_update_edit_text_height"
                android:layout_marginEnd="40dp"
                android:backgroundTint="@color/silver"
                android:drawableStart="@drawable/ic_cake"
                android:drawablePadding="5dp"
                android:drawableTint="@color/black"
                android:hint="@string/hint_date"
                android:importantForAutofill="no"
                android:inputType="date"
                android:textColor="@color/black"
                android:textColorHint="@color/silver"
                android:textSize="@dimen/account_update_text_size" />

            <ImageView
                android:id="@+id/ivDate"
                android:layout_width="@dimen/account_update_edit_text_height"
                android:layout_height="@dimen/account_update_edit_text_height"
                android:layout_marginStart="-40dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:padding="8dp"
                android:src="@drawable/ic_date"
                app:tint="@color/black"
                tools:ignore="contentDescription" />
        </LinearLayout>


        <EditText
            android:id="@+id/etPassword1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/account_update_edit_text_height"
            android:layout_marginTop="@dimen/account_update_edit_text_margin_top"
            android:drawableStart="@drawable/ic_password"
            android:drawablePadding="5dp"
            android:drawableTint="@color/black"
            android:hint="@string/hint5"
            android:importantForAutofill="no"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textColorHint="@color/silver"
            android:textSize="@dimen/account_update_text_size" />

        <EditText
            android:id="@+id/etPassword2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/account_update_edit_text_height"
            android:layout_marginTop="@dimen/account_update_edit_text_margin_top"
            android:drawableStart="@drawable/ic_password"
            android:drawablePadding="5dp"
            android:drawableTint="@color/black"
            android:hint="@string/hint6"
            android:importantForAutofill="no"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textColorHint="@color/silver"
            android:textSize="@dimen/account_update_text_size" />

        <Button
            android:id="@+id/btSave"
            android:layout_width="@dimen/account_update_button_save_width"
            android:layout_height="@dimen/account_update_button_save_height"
            android:layout_marginTop="@dimen/account_update_edit_text_margin_top"
            android:background="@drawable/bg_corner_no_color_10dp_border_black"
            android:text="@string/save"
            android:textColor="@color/black"
            android:textSize="@dimen/account_update_text_size" />
    </LinearLayout>
</LinearLayout>