<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@color/silver"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="65dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center|start"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvColor1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/bg_circle_white"
                    android:backgroundTint="@color/circle1"
                    android:gravity="center"
                    android:text="@string/aa"
                    android:textColor="@color/black"
                    android:textSize="19sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvColor2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/bg_circle_white"
                    android:backgroundTint="@color/circle2"
                    android:gravity="center"
                    android:text="@string/aa"
                    android:textColor="@color/black"
                    android:textSize="19sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvColor3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/bg_circle_white"
                    android:backgroundTint="@color/circle3"
                    android:gravity="center"
                    android:text="@string/aa"
                    android:textColor="@color/black"
                    android:textSize="19sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvColor4"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/bg_circle_white"
                    android:backgroundTint="@color/circle4"
                    android:gravity="center"
                    android:text="@string/aa"
                    android:textColor="@color/white"
                    android:textSize="19sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvColor5"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/bg_circle_white"
                    android:backgroundTint="@color/circle5"
                    android:gravity="center"
                    android:text="@string/aa"
                    android:textColor="@color/medium_sea_green"
                    android:textSize="19sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvColor6"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/bg_circle_white"
                    android:backgroundTint="@color/circle6"
                    android:gravity="center"
                    android:text="@string/aa"
                    android:textColor="@color/white"
                    android:textSize="19sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvColor7"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/bg_circle_white"
                    android:backgroundTint="@color/circle7"
                    android:gravity="center"
                    android:text="@string/aa"
                    android:textColor="@color/medium_sea_green"
                    android:textSize="19sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </HorizontalScrollView>

        <ImageView
            android:id="@+id/ivSettingColor"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginStart="-60dp"
            android:background="@drawable/border_corner_black_10dp"
            android:src="@drawable/ic_up"
            tools:ignore="contentDescription" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center|start"
            android:text="@string/font_size"
            android:textColor="@color/black"
            android:textSize="19sp"
            android:textStyle="normal" />

        <ImageView
            android:id="@+id/ivFontSizeDown"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/border_circle_black"
            android:padding="3dp"
            android:src="@drawable/ic_down"
            tools:ignore="contentDescription" />

        <TextView
            android:id="@+id/tvFontSize"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="19sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ivFontSizeUP"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/border_circle_black"
            android:padding="3dp"
            android:src="@drawable/ic_up"
            tools:ignore="contentDescription" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center|start"
            android:text="@string/line_stretch"
            android:textColor="@color/black"
            android:textSize="19sp"
            android:textStyle="normal" />

        <ImageView
            android:id="@+id/ivLineStretchDown"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/border_circle_black"
            android:padding="3dp"
            android:src="@drawable/ic_down"
            tools:ignore="contentDescription" />

        <TextView
            android:id="@+id/tvLineStretch"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="19sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ivLineStretchUp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/border_circle_black"
            android:padding="3dp"
            android:src="@drawable/ic_up"
            tools:ignore="contentDescription" />
    </LinearLayout>
</LinearLayout>