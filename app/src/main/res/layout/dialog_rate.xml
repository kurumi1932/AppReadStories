<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="380dp"
    android:layout_height="295dp"
    android:layout_gravity="center"
    android:background="@color/medium_sea_green"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <ImageView
            android:id="@+id/ivClose"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_clear"
            app:tint="@color/white"
            tools:ignore="contentDescription" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:gravity="center"
            android:text="@string/rate"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivRate1"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_not_rate"
            app:tint="@color/yellow"
            tools:ignore="contentDescription" />

        <ImageView
            android:id="@+id/ivRate2"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_not_rate"
            app:tint="@color/yellow"
            tools:ignore="contentDescription" />

        <ImageView
            android:id="@+id/ivRate3"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_not_rate"
            app:tint="@color/yellow"
            tools:ignore="contentDescription" />

        <ImageView
            android:id="@+id/ivRate4"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_not_rate"
            app:tint="@color/yellow"
            tools:ignore="contentDescription" />

        <ImageView
            android:id="@+id/ivRate5"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_not_rate"
            app:tint="@color/yellow"
            tools:ignore="contentDescription" />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_margin="10dp">

        <EditText
            android:id="@+id/etRate"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="@drawable/bg_corner_white_16dp"
            android:gravity="top|start"
            android:hint="@string/hint_rate"
            android:importantForAutofill="no"
            android:maxLength="400"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="20dp"
            android:textColorHint="@color/dim_gray"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:inputType="textMultiLine" />

        <TextView
            android:id="@+id/tvNumberTextRate"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:layout_marginEnd="16dp"
            android:gravity="end"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|top"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btDeleteRate"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="140dp"
            android:layout_height="45dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="15dp"
            android:layout_weight="1"
            android:background="@drawable/bg_corner_yellow_10dp"
            android:gravity="center"
            android:text="@string/delete_rate"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btRate"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="140dp"
            android:layout_height="45dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@drawable/bg_corner_yellow_10dp"
            android:gravity="center"
            android:text="@string/rate"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>